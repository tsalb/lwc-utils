<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Flow Wizard Router</masterLabel>
    <description>Used with screens for ease of managing stepped LWC Screens</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="templateName" type="String" role="inputOnly"></property>
            <property name="templateStep" type="Integer" role="inputOnly"></property>
            <property name="flowCacheJSON" type="String"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>